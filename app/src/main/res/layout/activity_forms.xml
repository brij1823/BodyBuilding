<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sanketpatel.bodybuilding.Forms">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_marginTop="60dp"
       android:src="@mipmap/fin"
       android:layout_marginLeft="130dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTRATION FORM"
        android:textSize="30sp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp" />
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="UPLOAD YOUR PHOTO HERE"
              android:textStyle="bold"
              android:layout_marginTop="25dp"/>
          <ImageButton
              android:id="@+id/images"
              android:layout_width="120dp"
              android:layout_height="120dp"
              android:layout_marginLeft="75dp"
              android:onClick="clickhere"
              />
      </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member Details"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Name"
         android:textSize="15dp"
         android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/city"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="State"
                android:textSize="15dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/state"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone"
            android:layout_marginTop="10dp"
            android:textSize="15dp"/>
          <EditText
              android:id="@+id/phone"
              android:layout_width="150dp"
              android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="10dp"
                android:textSize="15dp"/>
            <EditText
                android:id="@+id/email"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Membership Program"
            android:layout_marginTop="12dp"/>
            <EditText
                android:layout_width="100dp"
                android:id="@+id/membership"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="Physical Condition"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="13dp"
            android:text="To ensure safety and a successfull program,it is necessary to know any physical condition that may require a change in program. Please note any injuries or surgeries that should be considered for your training program"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Year"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/year1"
                android:layout_width="75dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Details"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/detail1"
                android:layout_width="200dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Year"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/year2"
                android:layout_width="75dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Details"
                android:layout_marginTop="12dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_marginTop="5dp"
                android:id="@+id/detail2"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Year"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/year3"
                android:layout_width="75dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Details"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/detail3"
                android:layout_width="200dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:text="Medical Condition"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="13dp"
            android:text="Please note any medical conditions that could prevent certain activities or require adjustments to the training program(i.e lifting restriction,mobility limitation, etc).Such restriction are provided by a physician."/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Condition"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/cond1"
                android:layout_width="75dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Restriction"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/rest1"
                android:layout_width="200dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Condition"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/cond2"
                android:layout_width="75dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Restriction"
                android:layout_marginTop="12dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_marginTop="5dp"
                android:id="@+id/rest2"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Condition"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/cond3"
                android:layout_width="75dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Restriction"
                android:layout_marginTop="12dp"/>
            <EditText
                android:layout_width="200dp"
                android:layout_marginTop="5dp"
                android:id="@+id/rest3"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LET'S GO"
            android:textSize="15dp"
            android:onClick="add"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


</ScrollView>
